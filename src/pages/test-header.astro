---
import ResponsiveName from "../components/header/responsive-name.astro";
import HamburgerNavMenu from "../components/header/hamburger-nav-menu.astro";

import { Image } from "astro:assets";
import headshotImage from "../images/headshot.jpg";

import { type NavItem } from "../types";
import PageLinks from "../components/header/page-links.astro";

const navItems: NavItem[] = [
  {
    path: "/bio",
    label: "About",
  },
  {
    path: "/education",
    label: "Education",
  },
  {
    path: "/tutor",
    label: "Tutor",
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test Header</title>
  </head>
  <body class="px-8 py-10 antialiased">
    <header class="flex flex-row items-center justify-between w-full">
      <!-- Group 1: Image -->
      <div class="flex-shrink-0 mr-3 sm:mr-5">
        <Image
          src={headshotImage}
          alt="Headshot"
          class="rounded-full w-10 h-10 | sm:w-16 sm:h-16"
        />
      </div>

      <!-- Group 2a: Site Name + Hamburger Button and Nav Links -->
      <div
        class="flex flex-grow justify-between items-between sm:flex-col sm:items-start"
      >
        <ResponsiveName />
        <HamburgerNavMenu navItems={navItems} />
        <PageLinks navItems={navItems} />
      </div>

      <!-- Group 2b: Page Links -->
    </header>
  </body>
</html>
