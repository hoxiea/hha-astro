---
import ResponsiveName from "../components/header/responsive-name.astro";
import HamburgerNavMenu from "../components/header/hamburger-nav-menu.astro";

import { Image } from "astro:assets";
import headshotImage from "../images/headshot.jpg";

import { type NavItem } from "../types";
import PageLinks from "../components/header/page-links.astro";

const navItems: NavItem[] = [
  {
    path: "/bio",
    label: "About",
  },
  {
    path: "/education",
    label: "Education",
  },
  {
    path: "/tutor",
    label: "Tutor",
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Test Header</title>
  </head>
  <body class="px-8 py-10 antialiased">
    <header class="flex flex-row items-center justify-between">
      <!-- Group 1: Image and Name -->
      <div class="flex flex-row items-center">
        <Image
          src={headshotImage}
          alt="Headshot"
          class="rounded-full w-10 h-10 mr-3 |"
        />
        <ResponsiveName />
      </div>

      <!-- Group 2a: Hamburger Button and Nav Links -->
      <HamburgerNavMenu navItems={navItems} />

      <!-- Group 2b: Page Links -->
      <PageLinks navItems={navItems} />
    </header>
    <main></main>
    <footer></footer>
  </body>
</html>
