---
import Default from "../layouts/default.astro";

import { getCollection } from "astro:content";
const allProjects = await getCollection("projects");

import { ViewTransitions } from "astro:transitions";
---

<Default title="Projects">
  <h1>Projects</h1>
  <div class="grid grid-cols-1 not-prose">
    {
      allProjects.map((project) => (
        <div class="bg-gray-100 p-6 rounded-lg shadow-lg mb-8">
          <h2 class="text-xl font-semibold text-gray-900 ">
            {project.data.title}
          </h2>
          <p class="text-sm text-gray-700 my-2">{project.data.date}</p>
          <p class="text-gray-800 mb-2">{project.data.summary}</p>
          <a
            href=`/projects/${project.slug}`
            class="text-blue-600 hover:underline float-right"
          >
            {project.data.linktext}
          </a>
        </div>
      ))
    }
  </div>

  <p class="text-xl text-center">More projects coming soon!</p>
</Default>
