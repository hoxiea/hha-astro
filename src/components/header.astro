---
import ResponsiveName from "./header/responsive-name.astro";
import HamburgerNavMenu from "./header/hamburger-nav-menu.astro";

import { Image } from "astro:assets";
import headshotImage from "../images/headshot.jpg";

import { type NavItem } from "../types";
import PageLinks from "./header/page-links.astro";

const navItems: NavItem[] = [
  {
    path: "/about",
    label: "About",
  },
  {
    path: "/education",
    label: "Education",
  },
  {
    path: "/tutor",
    label: "Tutor",
  },
];
---

<header class="flex flex-row items-center justify-between w-full mb-4 sm:mb-8">
  <!-- Group 1: Image -->
  <div class="flex-shrink-0 mr-3 sm:mr-5">
    <a href="/">
      <Image
        src={headshotImage}
        alt="Headshot"
        class="rounded-full w-10 h-10 | sm:w-16 sm:h-16"
      /></a
    >
  </div>

  <!-- Group 2a: Site Name + Hamburger Button and Nav Links -->
  <div
    class="flex flex-grow justify-between items-between sm:flex-col sm:items-start"
  >
    <ResponsiveName />
    <HamburgerNavMenu navItems={navItems} />
    <PageLinks navItems={navItems} />
  </div>

  <!-- Group 2b: Page Links -->
</header>
